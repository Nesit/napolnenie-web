<section id="slider">
  <div class="na-slider">
    <div class="na-slider-bg">
      <img src="/assets/loader-1.png" alt="">
      <img src="/assets/loader-2.png" alt="">
      <img src="/assets/loader-3.png" alt="">
    </div>
    <div class="na-slider-prev"></div>
    <div class="na-slider-next"></div>
    <div class="na-inner">
      <% page.banners.each do |banner| %>
      <div class="na-slide">
        <%= image_tag(banner.image.url(:medium)) %>
        <div class="slider_text">
          <h2>Autem sit sit voluptas dignissimos placeat voluptatum.</h2>
          <p>Voluptas est ut occaecati. Ut sed facere eius veritatis alias quis vel ut. Quasi repellat incidunt voluptate excepturi consequuntur nobis molestiae. Et quas est qui optio rerum nisi quisquam.</p>
	       <%== banner.text %>
	       </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="clearfix"></div>
</section>
