<nav class="na-social">
  <% url = "#{request.protocol}#{request.host_with_port}#{request.fullpath}" %>
  <a href="http://www.facebook.com/sharer.php?u=<%= url %>" target="_blank" class="facebook"></a>
  <a href="http://vkontakte.ru/share.php?url=<%= url %>" target="_blank" class="vk"></a>
  <a href="http://twitter.com/home?status=<%= url %>" target="_blank" class="twitter"></a>
  <a href="#sb" class="mail"></a>
  <a href="https://plus.google.com/share?url=<%= url %>" target="_blank" class="gplus"></a>
  <a href="http://www.odnoklassniki.ru/dk?st.cmd=addShare&st.s=1&st._surl=<%= url %>" target="_blank" class="odnoklassniki"></a>
  <a href="http://connect.mail.ru/share?share_url=<%= url %>" target="_blank" class="mailru"></a>
  <section class="na-mail" name="mail_mess" >
    <div class="na-inner">
      <header>Отправить письмо</header>
      <%= form_for Message.new, :url => '/receive_message', :remote => true, :validate => true, :html => {:class => 'form3'} do |f| %>
      <table>
	<tbody>
	  <tr>
	    <td>
	      <%= f.text_field :name, placeholder: 'Ф.И.О.', size: 30, tabindex: 1 %>
	    </td>
	    <td rowspan="3">
	      <%= f.text_area :text, placeholder: 'Сообщение', tabindex: 4 %>
	    </td>
	  </tr>
	  <tr>
	    <td>
	      <%= f.text_field :email, placeholder: 'E-mail', tabindex: 2 %>
	    </td>
	  </tr>
	  <tr>
	    <td>
	      <%= f.text_field :phone, placeholder: 'Телефон', tabindex: 3 %>
	    </td>
	  </tr>
	  <tr>
	    <td colspan="2"><button class="button3">Готово</button></td>
	  </tr>
	</tbody>
      </table>
<% end %>
<div class="form_message message3">Благодарим за то, что связались с нами</div>
</div>
</section>
</nav>
