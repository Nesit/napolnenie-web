<%= semantic_form_for [:admin, @static_page], html: { multipart: true } do |f| %>
  <%= f.inputs 'Основное' do %>
    <%#= f.input :permalink %>
    <%= f.input :text1, as: :html_editor %>
  <% end %>

  <%= f.inputs 'SEO' do %>
    <%= f.input :title, :input_html => { :rows => 5 } %>
    <%= f.input :keywords, :input_html => { :rows => 5 } %>
    <%= f.input :description, :input_html => { :rows => 5 } %>
  <% end %>

  <%= f.inputs "Фото в слайдере" do %>
    <% f.object.slider_photos.each do |photo| %>
      <div class="photo">
	<%= link_to image_tag(photo.image), photo.image.url(:original) %>
	<%= link_to 'Убрать', '', :class => 'remove_slider_photo', 'data-id' => photo.id %>
      </div>
    <% end %>
    <input type="file" name="static_page[slider_photos_attributes][][image]" multiple="multiple" accept="image"/>
  <% end %>

  <%= f.actions %>
<% end %>
